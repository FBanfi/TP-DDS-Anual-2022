{{# partial "titulo" }}
    <title>CarbonOrg-Calculator | Nueva Vinculacion</title>
{{/partial}}

{{# partial "contenido" }}
    <section class="marcoCuerpo">
        <section class="cuerpo">
            <title>Proponer Vinculacion</title>
            <form method="GET" action="/vinculaciones/nueva" class="formulario">
                <div>
                    <label for="organizacion">Organizaci√≥n:</label>
                    <select name="organizacion" id="organizacion" class="seleccion">
                        <option value="{{idValorOpcionOrg}}" selected>{{ValorOpcionOrg}}</option>
                        {{#organizaciones}}
                            <option value="{{id}}">{{nombre}}</option>
                        {{/organizaciones}}
                    </select>
                </div>
                <input type="submit" value="Validar seleccion">
            </form>
            <br>
            <form method="POST" action="/vinculaciones/nueva" class="formulario">
                <div class="input-field">
                    <label for="area">Areas:</label>
                    <select name="area" id="area" class="seleccion">
                        <option value="" disabled selected></option>
                        <option>Todas</option>
                        {{#areas}}
                            <option value="{{id}}">{{nombre}}</option>
                        {{/areas}}
                    </select>
                </div>
                <input type="hidden" value="{{idValorOpcionOrg}}" name="organizacion">
            <input type="submit" value="Enviar">
            </form>
        </section>
    </section>
{{/partial}}

